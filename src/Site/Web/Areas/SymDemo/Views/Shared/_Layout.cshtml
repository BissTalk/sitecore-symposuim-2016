@using Glass.Mapper.Sc
@{
    var cssClass = GlassHtml.IsInEditingMode ? "sc-page-edit" : null;
    var lang = "en";
    if (Sitecore.Context.Language != null)
    {
        lang = Sitecore.Context.Language.Name;
    }
}
<!DOCTYPE html>
<html lang="@lang">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="shortcut icon" href="/favicon.ico" type="image/vnd.microsoft.icon" />
    <title>@ViewBag.Title</title>
    @RenderSection("head", required: true)
    @Html.WriteStyles()
</head>
    <body class="@cssClass">
        @RenderBody()
        @Html.WriteScripts()
        @RenderSection("bottom", required: false)
    </body>
</html>